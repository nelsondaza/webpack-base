{
  "name": "webpack",
  "version": "1.0.0",
  "description": "Webpack base configuration",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "yarn clear:public && yarn compile",
    "build:progress": "yarn build --progress",
    "build:stats": "yarn build --stats",
    "build:w": "yarn build -w",
    "clear": "rimraf ./dist",
    "clear:public": "rimraf ./dist/public",
    "compile": "yarn install && webpack --mode production --bail",
    "cypress:open": "cypress open",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "pretty": "prettier --write ./src && yarn lint --fix",
    "serve": "yarn install && yarn webpack serve --hot --no-open --cache --bail --mode development",
    "serve:progress": "yarn serve --progress",
    "serve:public": "npx http-server dist/public -p 7071 --push-state",
    "serve:static": "npx http-server static -p 7072 --push-state",
    "serve:stats": "yarn serve --stats",
    "test": "yarn install && yarn test:base --maxWorkers=40% --json --outputFile=./dist/coverage/test-results.json",
    "test:base": "jest --config=./config/jest/index.js -u",
    "test:base:ci": "mkdir -p ./dist/coverage && node --expose-gc ./node_modules/.bin/jest --config=./config/jest/index.js -u --logHeapUsage --maxWorkers=2",
    "test:ci": "yarn test:base:ci --coverageReporters=text-summary --forceExit --ci -b",
    "test:w": "yarn test --watchAll"
  },
  "browserslist": [
    "last 3 versions",
    "not IE < 11",
    "not ExplorerMobile < 11"
  ],
  "dependencies": {
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "autoprefixer": "^10.3.7",
    "copy-webpack-plugin": "^9.0.1",
    "core-js": "^3.18.3",
    "css-loader": "^6.4.0",
    "cypress": "^8.6.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.0",
    "lodash-webpack-plugin": "^0.11.6",
    "mini-css-extract-plugin": "^2.4.2",
    "node-sass": "^6.0.1",
    "postcss": "^8.3.9",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "react-refresh": "^0.10.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.2.0",
    "sass-resources-loader": "^2.2.4",
    "style-loader": "^3.3.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.58.2",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  }
}
