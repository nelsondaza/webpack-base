{
  "name": "webpack-base",
  "version": "1.0.0",
  "description": "Webpack base configuration",
  "main": "src/index.js",
  "keywords": [],
  "author": "Nelson Daza",
  "license": "ISC",
  "browserslist": [
    "> 1%, last 3 versions",
    "not dead",
    "not IE < 11",
    "not ExplorerMobile < 11"
  ],
  "engines": {
    "node": "^16",
    "yarn": "1.x"
  },
  "scripts": {
    "build": "yarn clear:public && yarn compile",
    "build:progress": "yarn build --progress",
    "build:sentry": "yarn build --env SENTRY",
    "build:stats": "yarn build --stats",
    "build:stories": "yarn install && yarn build-storybook -c config/storybook -o dist/stories",
    "build:w": "yarn build -w",
    "clear": "rimraf ./dist",
    "clear:public": "rimraf ./dist/public",
    "compile": "yarn install && yarn webpack --mode production --bail",
    "cy:open": "cypress open --env envGroup=dev",
    "cy:prod:open": "cypress open --env envGroup=production",
    "cy:prod:run": "cypress run --env envGroup=production",
    "cy:public:open": "cypress open --env envGroup=public",
    "cy:public:run": "cypress run --env envGroup=public",
    "cy:run": "cypress run --env envGroup=dev",
    "cy:staging:open": "cypress open --env envGroup=staging",
    "cy:staging:run": "cypress run --env envGroup=staging",
    "deploy": "node config/scripts/deploy.js",
    "heroku-postbuild": "sh ./config/scripts/heroku-build.sh",
    "lint": "eslint ./src ./cypress --cache --ext .js,.jsx,.ts,.tsx",
    "lint:tsc": "tsc --noEmit && tsc -p ./cypress/tsconfig.json --noEmit",
    "prepare": "npx shx cp -r ./config/git/* .git/hooks",
    "pretty": "prettier --write ./src ./cypress && yarn lint --fix",
    "publicate:production": "yarn build --env SENTRY-production && yarn deploy production",
    "publicate:staging": "yarn build --env SENTRY-staging && yarn deploy staging",
    "serve": "yarn install && yarn webpack serve --hot --no-open --cache --bail --mode development",
    "serve:progress": "yarn serve --progress",
    "serve:public": "yarn http-server ./dist/public -p 7071 --push-state",
    "serve:static": "yarn http-server ./static -p 7073 --push-state",
    "serve:stats": "yarn serve --stats",
    "serve:stories": "yarn http-server ./dist/stories -p 7072 --push-state",
    "stories": "yarn install && yarn start-storybook -p 7074 -s ./static -c config/storybook --ci",
    "test": "yarn install && yarn test:base --maxWorkers=40% --json --outputFile=./dist/coverage/test-results.json",
    "test:base": "yarn jest --config=./config/jest/index.js -u",
    "test:base:ci": "mkdir -p ./dist/coverage && node --expose-gc --max-old-space-size=3072 ./node_modules/.bin/jest --config=./config/jest/index.js -u --logHeapUsage --maxWorkers=2",
    "test:ci": "yarn test:base:ci --coverageReporters=text-summary --forceExit --ci -b",
    "test:w": "yarn test --watchAll",
    "ts-coverage": "typescript-coverage-report -o ./dist/ts-coverage",
    "ts-coverage:w": "npx nodemon -x \"yarn ts-coverage\" -e ts,tsx -w \"./src\" -w \"./cypress\" --ignore '{src,cypress}/**/*.{test,tests}.{ts,tsx}'",
    "up": "yarn lint && yarn lint:tsc && yarn compile && yarn build:stories && yarn test && yarn serve"
  },
  "dependencies": {
    "@sentry/browser": "^6.19.6",
    "@sentry/tracing": "^6.19.6",
    "classnames": "^2.3.1",
    "connected-react-router": "^6.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^7.2.8",
    "react-router": "<6.0.0",
    "react-router-dom": "<6.0.0",
    "redux": "^4.2.0",
    "redux-observable": "^2.0.0",
    "regenerator-runtime": "^0.13.9",
    "rxjs": "^7.5.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@sentry/webpack-plugin": "^1.18.8",
    "@size-limit/preset-big-lib": "^7.0.8",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-jest": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@testing-library/cypress": "^8.0.2",
    "@types/cypress": "^1.1.3",
    "@types/history": "<5.0.0",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-speech-recognition": "^3.9.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "autoprefixer": "^10.4.5",
    "aws-sdk": "^2.1120.0",
    "copy-webpack-plugin": "^10.2.4",
    "core-js": "^3.22.2",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "cypress": "^9.5.4",
    "enzyme": "^3.11.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-testing-library": "^5.3.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.4.0",
    "http-server": "^14.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
