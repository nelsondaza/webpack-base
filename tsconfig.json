{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "checkJs": false,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "paths": {
            "*": [
                "*",
                "packages/*"
            ]
        },
        "strict": true,
        "target": "es5"
    },
    "include": [
        "./src/**/*",
    ]
}