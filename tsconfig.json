{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "checkJs": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/tsc",
    "paths": {
      "*": ["*", "packages/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "types": ["cypress", "@testing-library/cypress"]
  },
  "exclude": ["./node_modules/**/*", "**/.*/"],
  "include": ["./src/**/*", "./cypress/**/*"]
}
